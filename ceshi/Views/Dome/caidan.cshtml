
@{
    ViewBag.Title = "caidan";
    Layout = "~/Views/layout.cshtml";
}

<div class="row-fluid">
    <div class="span12">
        <ul class="breadcrumb"><li><i class="icon-home"></i><a href="/Home/Welcome">首页</a><i class="icon-angle-right"></i></li><li><a href="javascript:void(0)">系统设置</a><i class="icon-angle-right"></i></li><li><a href="javascript:void(0)">菜单管理</a></li></ul>
    </div>
</div>
<div class="row-fluid">
    <div class="span12">
        <div class="widget box light-grey">
            <div class="widget-title">
                <h4><i class="icon-globe"></i>菜单管理</h4>
                <div class="actions">
                    <a class="btn btn-primary" href="javascript:void(0)" onclick="UserMenu.Add()"><i class="icon-pencil"></i>&nbsp;新增</a>
                </div>
            </div>
            <div class="widget-body">

                <div class="row-fluid">
                    <form class="form-horizontal" action="javascript:void(0)">
                        <div class="control-group">
                            <div class="controls controls-cus">
                                <input id="txtResName" name="txtResName" type="text" class="input-xlarge" placeholder="请输入编号或名称" />
                                <a id="gritter-remove-all" class="btn btn-info" href="javascript:void(0)" onclick="UserMenu.PageClick(1,10)"><i class="icon-search"></i>&nbsp;搜索</a>
                            </div>
                        </div>
                    </form>
                </div>

                <table class="table table-striped table-bordered table-hover" id="tabInfo">
                    <thead>
                        <tr class="widget-title">
                            <th class="hidden-480">编号</th>
                            <th class="hidden-480">菜单名称</th>
                            <th class="hidden-480">父级菜单</th>
                            <th class="hidden-480">类型</th>
                            <th class="hidden-480">样式</th>
                            <th class="hidden-480">排序</th>
                            <th class="hidden-480">路径</th>
                            <th class="hidden-480">创建时间</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
                <div class="row-fluid" id="mypager">
                </div>
            </div>
        </div>
    </div>
</div>



